<odoo>
  <record id="view_loyalty_program_form" model="ir.ui.view">
    <field name="name">loyalty.program.form.inherited</field>
    <field name="model">loyalty.program</field>
    <field name="inherit_id" ref="pos_loyalty.view_loyalty_program_form" />
    <field name="arch" type="xml">
      <xpath expr="//sheet/div[last()]" position="after">
        <group string="Expiración de Puntos">
          <div>
            <label for="points_can_expire"/>
            <field name="points_can_expire" />
          </div>
          <div>
            <label for="expiration_period_months" attrs="{'invisible': [('points_can_expire', '=', False)]}"/>
            <field name="expiration_period_months"
              attrs="{'invisible': [('points_can_expire', '=', False)]}"
              placeholder="Ingresar Periodo de Expiración (Meses)"
            />
          </div>
          <button name="action_set_expiration_period"
            type="object"
            string="Configurar Expiración"
            attrs="{'invisible': [('points_can_expire', '=', False)]}"
          />
        </group>
      </xpath>
    </field>
  </record>
</odoo>