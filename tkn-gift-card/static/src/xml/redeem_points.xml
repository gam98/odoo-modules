<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <!-- Template del botÃ³n para canjear puntos por gift card -->
    <t t-name="RedeemPoints" owl="1">
        <span class="control-button">
            Canjear puntos por gift card!!!!
        </span>
    </t>

  <!-- Template del popup personalizado -->
    <t t-name="RedeemPointsPopup" owl="1">
      <div role="dialog" class="modal-dialog">
        <Draggable>
          <div class="popup popup-confirm">
              <div class="popup-content">
                  <div class="popup-header">
                      <h2><t t-esc="props.title"/></h2>
                  </div>
                  <div class="popup-body">
                      <p><strong>Cliente:</strong> <t t-esc="props.client.name"/></p>
                      <p><strong>Puntos disponibles:</strong> <t t-esc="props.points"/></p>
                      <p><label for="pointsToRedeem">Puntos a canjear:</label></p>
                      <input type="number" name="pointsToRedeem" min="1" t-att-max="props.points" 
                      t-model="state.pointsToRedeem" t-on-input="onInputChange"/>
                      <p>Monto del descuento: $<span><t t-esc="state.discountValue"/></span></p>
                  </div>
                  <div class="footer">
                      <button class="button cancel" style="color: white;background: #6EC89B;border-color: transparent;" t-on-click="resolve({ confirmed: false })">Cancelar</button>
                      <button style="color:white;background:#D25B5B;border-color: transparent;" class="button confirm" t-on-click="confirm()">Aceptar</button>
                  </div>
              </div>
          </div>
        </Draggable>
      </div>
    </t>
</templates>