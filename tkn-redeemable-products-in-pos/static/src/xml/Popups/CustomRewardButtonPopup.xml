<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  
    <t t-name="CustomRewardButtonPopup" owl="1">
      <div role="dialog" class="modal-dialog">
        <div class="popup">
          <div class="reward-modal-content">
            <div class="reward-close-button" t-on-click="clickClose">
              <i class="fa fa-window-close"></i>
            </div>
            <h3 t-esc="props.title"></h3>
            <div class="reward-modal-body">
                <div class="reward-modal-buttons">
                    <div t-on-click="clickReward" class="reward-button">
                        Promocionales/Gift Card
                    </div>
                    <div t-on-click="clickPVP" class="pvp-button">
                        Productos de venta al p√∫blico
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </t>

</templates>