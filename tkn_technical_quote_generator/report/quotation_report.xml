<odoo>
  <data>
      <!-- Acción del Informe -->
      <record id="action_report_technical_quote" model="ir.actions.report">
          <field name="name">Technical Quote</field>
          <field name="model">technical.quote.generator</field>
          <field name="report_type">qweb-pdf</field>
          <field name="report_name">tkn_technical_quote_generator.report_technical_quote</field>
          <field name="report_file">tkn_technical_quote_generator.report_technical_quote</field>
          <field name="print_report_name">'Technical Quote - %s' % (object.name)</field>
          <!-- <field name="binding_model_id" ref="model_technical_quote_generator"/> -->
          <field name="binding_model_id" eval="False"/>
          <field name="binding_type">report</field>
      </record>

      <!-- Plantilla del Informe -->
      <template id="report_technical_quote">
          <t t-call="web.html_container">
              <t t-foreach="docs" t-as="doc">
                  <t t-call="web.external_layout">
                      <div class="page">
                          <h2>Technical Quote Report</h2>
                          <p>Customer: <t t-esc="doc.partner_id.name"/></p>
                          <p>Total Amount: <t t-esc="doc.amount_total"/> €</p>
                      </div>
                  </t>
              </t>
          </t>
      </template>
  </data>
</odoo>
